<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="简单对话框"
        android:id="@+id/simpleButton"
        android:onClick="simple"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/simpleButton"
        android:layout_toEndOf="@+id/simpleButton"
        android:layout_marginStart="90dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="简单列表对话框"
        android:id="@+id/listButtion"
        android:layout_below="@+id/simpleButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp"
        android:onClick="simpleList"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="单选列表对话框"
        android:id="@+id/singleButton"
        android:layout_below="@+id/listButtion"
        android:layout_alignParentStart="true"
        android:onClick="singleChoice"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="多选列表对话框"
        android:id="@+id/multiButton"
        android:layout_below="@+id/singleButton"
        android:layout_alignEnd="@+id/singleButton"
        android:onClick="multiChoice"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义列表对话框"
        android:id="@+id/listButton"
        android:layout_below="@+id/multiButton"
        android:layout_alignEnd="@+id/multiButton"
        android:onClick="customList"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义View对话框"
        android:id="@+id/customViewButton"
        android:layout_below="@+id/listButton"
        android:layout_alignParentStart="true"
        android:onClick="customView"/>


</RelativeLayout>
